{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "simple": {
        "format": "%(asctime)s Bot: | %(name)33s | %(levelname)8s | %(message)s"
      },
      "other": {
        "format": "%(asctime)s | %(name)10s | %(levelname)8s | %(message)s"
      },
      "long": {
        "format": "%(asctime)s | %(name)10s | %(levelname)8s \n    %(message)s"
      }
    },
  
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
  
      "info_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "formatter": "simple",
        "filename": "info_ocr.log",
        "maxBytes": 102400,
        "backupCount": 2,
        "encoding": "utf8"
      },
  
      "error_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "ERROR",
        "formatter": "simple",
        "filename": "errors_ocr.log",
        "maxBytes": 102400,
        "backupCount": 2,
        "encoding": "utf8"
      },

      "ocr_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "long",
        "filename": "ocr_debug.log",
        "maxBytes": 102400,
        "backupCount": 2,
        "encoding": "utf8"
      }
    },
  
    "loggers": {
      "cogs": {
        "level": "INFO",
        "handlers": ["console", "ocr_file_handler", "error_file_handler"],
        "propagate": false
      }
    },
  
    "root": {
      "level": "INFO",
      "handlers": ["console", "info_file_handler", "error_file_handler"]
    }
}